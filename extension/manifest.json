{
  "manifest_version": 3,
  "name": "Synapse - Capture Your Thoughts",
  "version": "2.0.0",
  "description": "Capture web pages, Amazon products, blogs, screenshots, videos, and more to your second brain",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "desktopCapture",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "http://127.0.0.1:8080/*",
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
